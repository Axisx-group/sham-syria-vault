
{
  "name": "souripay-client-dashboard",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "vite --config vite.client.config.ts",
    "build:client": "tsc && vite build --config vite.client.config.ts",
    "preview:client": "vite preview --config vite.client.config.ts",
    "cap:sync:client": "npx cap sync --config capacitor-client.config.ts",
    "cap:add:android:client": "npx cap add android --config capacitor-client.config.ts",
    "cap:run:android:client": "npx cap run android --config capacitor-client.config.ts",
    "cap:build:client": "npm run build:client && npx cap sync --config capacitor-client.config.ts && npx cap open android"
  }
}
